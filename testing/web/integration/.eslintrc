{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 1,
    "import/no-absolute-path": 0
  },
  "settings": {
    "import/resolver": {
      "babel-root-slash-import": {}
    }
  }
}
